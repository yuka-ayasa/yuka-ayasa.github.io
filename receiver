<body>

<h1>Incoming Art Requests</h1>

<div id="viewer"></div>

<script>
    function loadRequests() {
        let requests = JSON.parse(localStorage.getItem("requests") || "[]");
        let viewer = document.getElementById("viewer");
        viewer.innerHTML = "";

        if (requests.length === 0) {
            viewer.innerHTML = "<p style='text-align:center;color:#777;'>No requests yet.</p>";
            return;
        }

        requests.forEach(req => {
            viewer.innerHTML += `
                <div class="request-card">
                    <div class="name">${req.name}</div>
                    <div class="details">${req.details}</div>
                    <div class="category">Category: ${req.category}</div>
                </div>
            `;
        });
    }

    loadRequests();
</script>

</body>
</html>
